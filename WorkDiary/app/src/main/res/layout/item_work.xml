<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_itemwork_wrapper"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/rounded_rectangle_black_stroke"
    android:orientation="vertical"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_itemwork_title"
            style="@style/style_bold_context"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:gravity="left"
            android:textSize="16dp"
            tools:text="노동 제목" />

        <TextView
            android:id="@+id/tv_itemwork_set"
            style="@style/style_normal_context"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:textSize="14dp"
            tools:text="(세트 제목)" />

        <TextView
            android:id="@+id/tv_itemwork_dday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/termina_bold"
            android:textColor="@color/colorBlack"
            android:textSize="15dp"
            tools:text="D-5" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_itemwork_date"
            style="@style/style_normal_context"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:textSize="14dp"
            tools:text="10월 17일(수)" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="right">

            <TextView
                android:id="@+id/tv_itemwork_startNend"
                style="@style/style_normal_context"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:textSize="14dp"
                tools:text="07:00 ~ 12:00" />

            <TextView
                android:id="@+id/tv_itemwork_workTime"
                style="@style/style_normal_context"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                tools:text="(7시간 30분)" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_itemwork_btnlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:visibility="gone"
        tools:visibility="visible">

        <TextView
            style="@style/style_bottom_button_blue"
            android:id="@+id/tv_itemwork_okBtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="8dp"
            android:text="확인"
            android:textSize="14dp" />

        <TextView
            style="@style/style_bottom_button_red"
            android:id="@+id/tv_itemwork_delete"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="8dp"
            android:text="삭제"
            android:textSize="14dp" />
    </LinearLayout>
</LinearLayout>