<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_itemwork_wrapper"
    android:layout_width="match_parent"
    android:layout_margin="10dp"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        style="@style/style_bold_context"
        android:id="@+id/tv_itemdiary_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2020년 12월" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:id="@+id/rv_itemdiary_workRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:itemCount="3"
        tools:listitem="@layout/item_diary_detail" />

    <TextView
        style="@style/style_bold_context"
        android:id="@+id/tv_itemdiary_totalMoney"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total: 176,720원" />

    <View
        android:id="@+id/view_itemdiary_bottomLine"
        android:background="@color/colorDarkGray"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
</LinearLayout>